// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id          String   @id @default(uuid())
  profile     String   @unique
  description String
  route       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User[]
}

model User {
  id              String    @id @default(uuid())
  username        String    @unique
  email           String    @unique
  phone           String    @unique
  password        String
  profile         Profile[]
  isActive        Boolean   @default(true)
  isResetPassword Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Campaign {
  id          String    @id @default(cuid())
  title       String    @unique
  description String
  quota       Int
  startedDate DateTime
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  booklet     Booklet[]
}

model Acquirer {
  id           String    @id @default(cuid())
  cpf          String?   @unique
  name         String
  phone        String
  whatsapp     String
  landline     String
  address      String
  cep          String
  neighborhood String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  booklet      Booklet[]
}

model Booklet {
  id             String          @id @default(cuid())
  codeBooklet    Int
  quota          Int
  acquirerId     String
  campaignId     String
  paymentBookId  String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  acquirer       Acquirer        @relation(fields: [acquirerId], references: [id])
  campaign       Campaign        @relation(fields: [campaignId], references: [id])
  bookletPayment BookletPayment? @relation(fields: [paymentBookId], references: [id])
}

enum StatusPayment {
  Paid
  Pending
  Canceled
}

enum TypePayment {
  CreditCard
  Boleto
  Pix
}

model BookletPayment {
  id          String    @id @default(cuid())
  isPaid      Boolean
  typePayment String
  status      String
  obs         String    @default("Sem observações")
  payDay      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookletId   String
  Booklet     Booklet[]
  operator    String?
}
